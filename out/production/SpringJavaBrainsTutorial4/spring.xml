<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

    <bean id="triangle" class="org.pratik.javabrains.Triangle">
        <property name="p1" ref="pt1"></property>
        <property name="p2" ref="pt2"></property>
        <property name="p3" ref="pt3"></property>
    </bean>

    <bean id="pt1" class="org.pratik.javabrains.Point">
        <property name="x" value="0"></property>
        <property name="y" value="0"></property>
    </bean>
    <bean id="pt2" class="org.pratik.javabrains.Point">
        <property name="x" value="-20"></property>
        <property name="y" value="0"></property>
    </bean>
    <bean id="pt3" class="org.pratik.javabrains.Point">
        <property name="x" value="0"></property>
        <property name="y" value="20"></property>
    </bean>

</beans>
