<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

    <bean id="parentTriangle" class="org.pratik.javabrains.Triangle">
        <property name="pt1" ref="p1"></property>
    </bean>

    <bean id="triangle1" class="org.pratik.javabrains.Triangle" parent="parentTriangle">
        <property name="pt2" ref="p2"></property>
        <property name="pt3" ref="p3"></property>
    </bean>

    <bean id="triangle2" class="org.pratik.javabrains.Triangle" parent="parentTriangle">
        <property name="pt2" ref="p2"></property>
    </bean>

    <bean id="p1" class="org.pratik.javabrains.Point">
        <property name="x" value="0"></property>
        <property name="y" value="0"></property>
    </bean>
    <bean id="p2" class="org.pratik.javabrains.Point">
        <property name="x" value="-20"></property>
        <property name="y" value="0"></property>
    </bean>
    <bean id="p3" class="org.pratik.javabrains.Point">
        <property name="x" value="0"></property>
        <property name="y" value="20"></property>
    </bean>

</beans>
